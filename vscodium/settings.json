{
    /* 
    ###### Terminal configs ######
    */
    "terminal.integrated.inheritEnv": true,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.enablePersistentSessions": false,
    /* 
    ##############################
    */
    
    /* 
    ###### Window configs ######
    */
    "window.zoomLevel": 0.5,
    "window.commandCenter": false,
    "window.restoreWindows": "none",
    "window.menuBarVisibility": "toggle",
    /* 
    ##############################
    */

    /* 
    ###### Editor configs ######
    */
    "editor.fontFamily": "'JetBrainsMono Nerd Font Mono', 'monospace', monospace",
    "editor.lineNumbers": "relative",
    "editor.fontSize": 14,
    "editor.minimap.enabled": false,
    "editor.cursorSurroundingLines": 8,
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingDelete": "never",
    "editor.autoClosingQuotes": "never",
    "editor.autoClosingComments": "never",
    "editor.autoSurround": "never",
    "editor.rulers": [88],
    "editor.semanticHighlighting.enabled": false,
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.horizontal": "hidden",
    /* 
    ##############################
    */
    
    /* 
    ###### Workbench configs ######
    */
    "workbench.editor.labelFormat": "short",
    "workbench.layoutControl.enabled": false,
    "workbench.colorTheme": "Default Dark Modern",
    "workbench.activityBar.location": "hidden",
    /* 
    ##############################
    */

    /* 
    ###### Explorer configs ######
    */
    "explorer.compactFolders": false,
    /* 
    ##############################
    */

    /* 
    ###### Python ######
    */
    "python.analysis.typeCheckingMode": "strict", // pyright
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "ms-python.black-formatter",
    },
    "black-formatter.args": [
        "--line-length=88"
    ],
    /* 
    ##############################
    */

    /* 
    ###### auto docstring ######
    */
    "autoDocstring.docstringFormat": "google",
    /* 
    ##############################
    */

    /* 
    ###### VIM ######
    */
    "vim.useSystemClipboard": true,
    "vim.incsearch": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        // Allow navigate wrapped text
        {
            "before": ["j"], 
            "after": ["g", "j"]
        },
        {
            "before": ["down"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        {
            "before": ["up"],
            "after": ["g", "k"]
        },
        {
            "before": ["<C-n>"],
            "commands": [":nohl"]
        },
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": ["g", "r"],
            "commands": ["editor.action.goToReferences"]
        },
        {
            "before": ["<leader>", "e", "f"],
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": ["<leader>", "X"],
            "commands": ["ipython.runSection"],
            "when": ["editorTextFocus && ipython.isUse && !inDebugMode && editorLangId == 'python'"]
        },
        {
            "before": ["<leader>", "E"],
            "commands": ["ipython.runSelections"],
            "when": ["editorTextFocus && ipython.isUse && !findInputFocussed && !inDebugMode && !replaceInputFocussed && editorLangId == 'python'"]
        }
    ],
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    /* 
    ##############################
    */

    /* 
    ###### TODO Tree ######
    */
    "todo-tree.general.tags": ["TODO", "FIXME", "REMOVEME"],
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "icon": "checklist",
            "type": "line",
            "background": "#174b4d",
            "foreground": "#ffffff",
            "gutterIcon": true
        },
        "FIXME": {
            "icon": "tools",
            "foreground": "#e2820c",
            "iconColour": "#e2f108",
            "gutterIcon": true
        },
        "REMOVEME": {
            "icon": "x-circle-fill",
            "foreground": "#e20c0c",
            "iconColour": "#ffffff",
            "gutterIcon": true
        }
    },
    /* 
    ##############################
    */

    /* 
    ###### Ltex ######
    */
    "ltex.checkFrequency": "edit",
    "ltex.languageToolHttpServerUri": "",
    "ltex.languageToolOrg.apiKey": "",
    "ltex.languageToolOrg.username": "",
    /* 
    ##############################
    */

    /* 
    ###### ipython ######
    */
    "ipython.StartupCommands": [
        "%load_ext autoreload",
        "%autoreload 2"
    ],
    /* 
    ##############################
    */
}
